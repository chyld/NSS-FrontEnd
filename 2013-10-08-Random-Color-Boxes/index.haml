%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Random Color Boxes
  .row
    .small-3.columns
      %input#dimensions{type: 'text', autofocus: true, placeholder: 'Enter box dimensions'}
    .small-3.columns
      %input#delay{type: 'text', placeholder: 'Enter delay in seconds'}
    .small-6.columns
      %input#start.button.small.success.radius{type: 'button', value: 'Start'}
      %input#stop.button.small.alert.radius{type: 'button', value: 'Stop'}
  .row
    .small-12.columns
      #colors

  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}

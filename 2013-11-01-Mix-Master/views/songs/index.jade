extends ../template/layout

block content
  .row
    .small-12.columns
  .row
    .small-12.columns
      #songs
        each song in songs
          .song
            h3= song.title
            audio(src='/audios/#{song.filename}', controls=true)
            img(src=song.art)
            p= song.duration
            p= song.lyrics
            ul
              each genre in song.genres
                li= genre
            p= song.createdAt
